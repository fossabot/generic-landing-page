root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 160
tab_width = 2
trim_trailing_whitespace = true

[*.css]
indent_size = 4
tab_width = 4

[{*.sass,*.scss}]
tab_width = 4

[*.md,.github/workflows/*.yml]
max_line_length = 300
